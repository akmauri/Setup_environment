# Environment Variables Example
# 
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# See env-setup-instructions.md for detailed setup instructions

# Database
POSTGRES_USER=mpcas2
POSTGRES_PASSWORD=your-postgres-password-here
POSTGRES_DB=mpcas2_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://mpcas2:your-postgres-password-here@localhost:5432/mpcas2_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# API
API_PORT=3001
API_URL=http://localhost:3001
NODE_ENV=development

# Next.js
NEXT_PUBLIC_API_URL=http://localhost:3001

# JWT
# Generate secure random strings for production (minimum 32 characters)
JWT_SECRET=your-jwt-secret-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth (Google)
# Get credentials from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# OAuth (Other platforms - add as needed)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# OpenAI (for content generation)
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# AWS (for S3 storage)
# Get credentials from AWS IAM Console
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Stripe (for payments)
# Get API keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# SendGrid (for email)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key

# Sentry (error tracking)
# Get DSN from: https://sentry.io/settings/
SENTRY_DSN=your-sentry-dsn

# App
APP_URL=http://localhost:3000
